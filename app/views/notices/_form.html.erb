 <%= simple_form_for(@notice) do |f| %>
    <%= f.input :title, label: "Başlık:", hint: "Boş geçmeyiniz!", placeholder: "Lütfen başlık giriniz!" %>
    <%= f.input :message, label: "İlan İçeriği" , placeholder: "Lütfen iletişim bilgileri girmeyiniz!"%>
    <%= f.button :submit, "Gönder" %>
<% end %>